
<%= form_with model: @customer do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
  <%= form_with model: Customer.new, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: Customer.new %>

    <div class="row">
      <div class="col">
        <h2>新規登録</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-3">名前</div>
      <div class="col-1"><%= f.label :last_name, "(姓)" %></div>
      <div class="col-3"><%= f.text_field :last_name %></div>
      <div class="col-1"><%= f.label :first_name, "(名)" %></div>
      <div class="col-3"><%= f.text_field :first_name %></div>
    </div>
    <div class="row">
      <div class="col-3">フリガナ</div>
      <div class="col-1"><%= f.label :last_name_kana, "(セイ)" %></div>
      <div class="col-3"><%= f.text_field :last_name_kana %></div>
      <div class="col-1"><%= f.label :first_name_kana, "(メイ)" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana %></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-1"></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :post_code, "郵便番号（ハイフンなし）" %></div>
      <div class="col-1"></div>
      <div class="col-3"><%= f.text_field :post_code %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :address, "住所" %></div>
      <div class="col-1"></div>
      <div class="col-3"><%= f.text_field :address %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-1"></div>
      <div class="col-3"><%= f.text_field :telephone_number %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :password, "パスワード(6文字以上)" %></div>
      <div class="col-1"></div>
      <div class="col-3">

        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :password_confirmation, "パスワード（確認用）" %></div>
      <div class="col-1"></div>
      <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      <div class="col-3"></div>
    </div>
    <div class="row">
      <div class="col-4"></div>
      <div class="col-3 py-1"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
  <div class="row">
    <div class="col">
      <h4>既に登録済みの方</h4>
      <%= link_to "こちら", new_customer_session_path %><%= "からログインしてください。" %>
    </div>
    <div class="col"></div>
    <div class="col"></div>
  </div>
</div>
<% end %>

