
  <%#= render "public/shared/error_messages" %>

<div class="container">
 <div class="row">
      <div class="col">
        <h2>搬送先登録/一覧</h2>
      </div>
  </div>
      <%= form_with model: @address do |f| %>
    <div class="row">
      <div class="col-3"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></div>
      <div class="col-3"><%= f.text_field :postal_code %></div>
    </div>

    <div class="row">
      <div class="col-3"><%= f.label :address, "住所" %></div>
      <div class="col-3"><%= f.text_field :address, size: 50 %></div>
    </div>

    <div class="row">
      <div class="col-3">宛名</div>
      <div class="col-5"><%= f.text_field :name %></div>
      <div class="col-3 py-1"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>

  <table class="table table-bordered">
    <thead>
      <tr>
      <th scope="row" style="width: 15%">郵便番号</th>
      <th scope="row" style="width: 35%">住所</th>
      <th scope="row" style="width: 15%">宛名</th>
      <th scope="row" style="width: 15%"></th>
    </tr>
    </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <th><%= link_to edit_address_path(address.id), class: "btn btn-success" do %>
                      編集する<% end %>
      <%= link_to address_path(address.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" do %>
                      削除する<% end %>
      </th>
    </tr>
  </tbody>
      <% end %>
  </table>
</div>