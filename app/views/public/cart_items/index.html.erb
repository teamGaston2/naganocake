<div class="container">
  <div class="row">
    <div class="col-3"><h3>ショッピングカート</h3></div>
    <div class="col-6"></div>
    <div class="col-3"><%= link_to "カートを空にする", destroy_all_cart_items_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %></div>
  </div>

  <div class="row">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="row"  style="width: 30%">商品名</th>
        <th scope="row"  style="width: 15%">単価(税込)</th>
        <th scope="row"  style="width: 15%">数量</th>
        <th scope="row"  style="width: 15%">小計</th>
        <th scope="row"  style="width: 15%"></th><br>
      </tr>
    </thead>
    <tbody>
          <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(150,150) %>
          <%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= form_with model: CartItem.new, url:cart_items_path(cart_item.id), local:true do |f| %>
          <%= f.hidden_field :order_details_id, :value => cart_item.item.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更", class: "btn btn-success" %>
          <% end %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除", destroy_all_cart_items_path(cart_item.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
      </td>
         <% @total_payment += cart_item.subtotal %>
    </tr>
          <% end %>
    </tbody>
  </table>
  </div>

  <div class="row">
    <div class="col-8">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-success" %>
    </div>

    <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row" width= 30% >合計金額</th>
            <td scope="row" width= 50% ><% @total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-5"></div>
    <div class="col-5">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
