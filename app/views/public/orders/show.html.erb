<div class="container">
  <div class="row">
    <div class="col-md-auto p-1 offset-md-1">
      <div class="bg-dark text-white"><h2>注文履歴詳細</h2></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mt-1 offset-md-1">
      <table class="table  table-bordered">
        <thead><h3>注文情報</h3></thead>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address_display %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
        </tr>
        <tr>
        <th>ステータス</th>
        <td><%= Order.order_statuses_i18n[@order.order_status] %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-4 mt-1">
      <table class="table  table-bordered">
        <thead><h3>請求情報</h3></thead>
        <tr>
          <th>商品合計</th>
          <td><%= number_with_delimiter(@order.total_payment - @order.shipping_cost) + "円" %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= number_with_delimiter(@order.shipping_cost) + "円" %></td>
        </tr>
        <tr>
          <th><b>ご請求額</b></th>
          <td><%= number_with_delimiter(@order.total_payment) + "円" %></td>
        </tr>
      </table>
    </div>
  </div>
    <div class="row">


      <div class="col-md-10 offset-md-1">
        <table class="table table-bordered">
          <h3>注文内容</h3>
          <thead class="text-center">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </thead>
          <tbody>
            <% @order.order_details.each do |detail| %>
              <tr>
                <td><%= detail.item.name %></td>
                <td><%= number_with_delimiter((detail.price * 1.1).round) + "円" %></td>
                <td><%= detail.amount %></td>
                <td><%= number_with_delimiter((detail.price * 1.1).round * detail.amount) + "円" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
