<div class="container">
  <div class="row">
    <div class="col-md-auto p-1 offset-md-1">
      <div class="bg-dark text-white"><h2>注文履歴詳細</h2></div>
    </div>
    <div class="col-md-8 mt-1">
      <table>
        <h3>注文情報</h3>
        <th>注文日</th>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        <th>配送先</th>
        <td><%= @order.address_display %></td>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
    </table>
    </div>
  </div>
</div>

