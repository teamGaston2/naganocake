<div class="container mt-4">
  <div class="row">
    <div class="col-md-auto p-1 offset-md-1">
      <div class="bg-dark text-white"><h4>注文情報確認画面</h4></div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-1">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image.attached? ? url_for(cart_item.item.image) : asset_path('no_image.jpg'), size: "60x50" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= (cart_item.item.price*1.1).to_i %></td>
              <td><%= cart_item.amount %></td>
              <td>
                <% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
                <%= subtotal %>
              </td>
            </tr>
            <% total += (cart_item.item.price*cart_item.amount)*1.1 %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 mt-2">
      <table class="table">
        <thead>
          <tr>
            <th>送料</th>
            <td><%= @shipping = 800 %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td>
              <%= total.to_i %>
            </td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total_payment = total.to_i + @shipping %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"><h3>支払方法</h3></div>
    <div class="col-md-5"><%= Order.payment_methods_i18n[@payment_method] %></div>
  </div>
  <div class="row">
    <div class="col-md-3"><h3>配送先</h3></div>
    <div class="col-md-5"><%= '〒' + @order.postal_code + ' ' + @order.address + ' ' + @order.name %></div>
  </div>
  <div class="text-center">
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <!--%= f.hidden_field :cart_item_id, value: cart_item.id %>-->
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :shipping_cost, value: @shipping %>
      <%= f.hidden_field :total_payment, value: @total_payment %>
      <%= f.hidden_field :payment_method, value: @payment_method %>
      <%= f.hidden_field :order_status %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

