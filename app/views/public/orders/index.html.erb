<div class="container">
  <div class="row">
    <div class="col-md-auto p-1 offset-md-1">
      <div class="bg-dark text-white"><h2>注文履歴一覧</h2></div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead>
        <tbody>
          <% @order.each do |f| %>
            <td><%= f.create_at %></td>
            <td><%= f.address_display %></td>
            <td><%= f.order_id.item_id %></td>
            <td><%= f.price %></td>
            <td><%= f.making_status %></td>
            <td><%= link_to order_path, "表示する" %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>