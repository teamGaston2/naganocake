<div class="container">
  <div class="row">
    <div class="col-md-auto p-1 offset-md-1">
      <div class="bg-dark text-white"><h2>注文履歴一覧</h2></div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="text-center">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |f| %>
            <tr>
              <td><%= f.created_at.strftime("%Y年%m月%d日") %></td>
              <td><%= f.address_display %></td>
              <!--%= f.order_details.item.name.each %>-->
              <td>
                <% f.order_details.each do |o| %>
                  <%= o.item.name %>
                <% end %>
              </td>
              <td><%= number_with_delimiter(f.total_payment) + "円" %></td>
              <td><%= Order.order_statuses_i18n[f.order_status] %></td>
              <td><%= link_to "表示する", order_path(f), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>