<% content_for :title, "#{@customer.last_name} #{@customer.first_name}の詳細" %>

<div class="container mt-4">
  <h1 class="text-left"><%= @customer.last_name %> <%= @customer.first_name %>の詳細</h1>
  <table class="table table-striped mt-3">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <% if @customer.is_active %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="text-muted">無効</span>
        <% end %>
      </td>
    </tr>
  </table>
  <div class="row">
    <div class="col-4">
      <%= link_to '会員一覧に戻る', admin_customers_path, class: 'btn btn-secondary mt-3' %>
    </div>
    <div class="col-4">
      <%= link_to '編集', edit_admin_customer_path, class: 'btn btn-success mt-3' %>
    </div>
    <div class="col-4">
        <%= link_to '注文履歴', admin_customers_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>

  
</div>
