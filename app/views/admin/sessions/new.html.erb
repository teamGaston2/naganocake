<div class="container mt-5">
  <%= form_with(url: admin_session_path, scope: :admin, local: true) do |f| %>
  <div class="row justify-content-center">
    <div class="col-md-10 mb-3">
      <h2 class="card-header bg-light text-left">管理者ログイン</h2>
    </div>
    <div class="col-md-7">
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-2col-form-label" %> 
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :encrypted_password, "パスワード", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :encrypted_password, class: "form-control" %>
          </div>
        </div>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col-md-3">
        <div class="form-group mt-3">
          <%= link_to 'ログイン', admin_items_path, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


