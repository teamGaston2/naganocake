<div class="container">
  <div class= "row">
    <div class="col-md-12">

      <div class="item-index-title">
        <h5 class="fs-6">
          <span class="px-2">商品一覧</span>
        </h5>
        <%= link_to new_admin_item_path , class: "plus-icon" do %>
          <i class="fa-solid fa-circle-plus fa-3x"></i>
        <% end %>
      </div>


      <table class="table table-borderless" >
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td class="underline" ><%= link_to item.name , admin_item_path(item) %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td class="<%= item.is_active ? 'text-success' : 'text-secondary' %>">
                <% if item.is_active %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <%= paginate @item_page %>
