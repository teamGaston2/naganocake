<h3>商品詳細</h3>

<div><%= image_tag @item.get_image(100,100) %></div>

<table>
  <tbody>
    <tr>
      <th>商品名</th>
      <th><%= @item.name %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= @item.introduction %></th>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th><%= @item.genre.name %></th>
    </tr>
    <tr>
      <th>税込価格<br>(税抜価格)</th>
      <th><%= "#{@item.with_tax_price}(#{@item.price})" %></th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th class="<%= @item.is_active ? 'text-success' : 'text-secondary' %>">
          <% if @item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </th>
    </tr>
  </tbody>
</table>

<%= link_to "編集する" , edit_admin_item_path(@item) %>

</div>