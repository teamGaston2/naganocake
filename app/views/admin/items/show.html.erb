<div class="container py-4">

      <div class="item-show-title mb-3">
        <h5 class="fs-6">
          <span class="px-2">商品詳細</span>
        </h5>
      </div>

      <div class= "row">
        <div class="col-md-4">
          <div class="mb-3">
            <div class="image"><%= image_tag @item.get_image(290,175) , class: "img-fluid rounded"%></div>
          </div>
        </div>

        <div class="col-md-8">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th>商品名</th>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <th>商品説明</th>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <th>税込価格<br>(税抜価格)</th>
                <td><%= "#{@item.with_tax_price.to_s(:delimited)}（#{@item.price.to_s(:delimited)}）" %>円</td>
              </tr>
              <tr>
                <th>販売ステータス</th>
                <td class="<%= @item.is_active ? 'text-success' : 'text-secondary' %>">
                  <% if @item.is_active %>
                    販売中
                  <% else %>
                    販売停止
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>

        <div class="mt-3">
          <%= link_to edit_admin_item_path(@item) , class:"btn btn-success" do %>
            編集する
          <% end %>
        </div>

        </div>
      </div>
    </div>
