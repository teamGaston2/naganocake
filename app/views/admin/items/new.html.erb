<div class="container text-center">
  <%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>
    <div class="row">
      <div class="col-8 text-left">
        <h2>新規商品登録</h2>
      </div>
    </div>

    
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :image, "商品画像" %></div>
          <div class="col-6"><%= f.file_field :image, class:  "boder-0" %></div>
        </div>
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :name, "商品名" %></div>
          <div class="col-3"><%= f.text_field :name, class: "form-control fs-4" %></div>
        </div>
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :introduction, "商品説明" %></div>
          <div class="col-3"><%= f.text_area :introduction, class: "form-control fs-4" %></div>
        </div>
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :genre_id, "ジャンル" %></div>
            <div class="col-6">
              <%= f.select :genre_id, options_from_collection_for_select(@genres, :id, :name), { include_blank: '選択してください' }, class: "form-control fs-4" %>
            </div>
        </div>
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :price, "税抜き価格" %></div>
          <div class="col-3">
            <div class="input-group">
              <%= f.text_field :price, class: "form-control fs-4" %>
              <div class="input-group-append">
                <span class="input-group-text fs-4">円</span>
              </div>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-3 fs-4"><%= f.label :is_active, "販売ステータス" %></div>
          <div class="col-5">
            <% Item.is_actives.keys.each do |status| %>
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_active, status, id: "is_active_#{status}", class: "form-check-input" %>
                <%= f.label "is_active_#{status}", status.humanize, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-12 text-center">
            <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div> 
    </div>
  <% end %>
</div>
