<div class="container">
  <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
      <div class="row">
          <h2>ジャンル編集</h2>
      </div>
      <div class="row">
          <div class="col-2"><%= f.label :name, "ジャンル名" %></div>
          <div class="col-4"><%= f.text_field :name %></div>
          <div class="col-4"><%= f.submit "変更を保存する", class: "btn btn-success" %></div>
      </div>
  <% end %>
  <div class="row mt-5">
    <%= link_to "戻る", admin_genres_path, class: "btn btn-secondary" %>
  </div
</div>

